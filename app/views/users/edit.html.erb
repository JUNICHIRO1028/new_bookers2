<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto px-0 my-5">
      <h2>User info</h2>

      <% if @user.errors.any? %>
      <h4><%= @user.errors.count %>errors prohibited this obj from being saved:</h4>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>

      <%= form_with model: @user do |f| %>
      <div class="form-group">
        <label for="inputName">Name</label>
        <%= f.text_field :name, class: "form-control", autofocus: true, id:"inputName" %>
      </div>
      <div class="form-group">
        <label for="inputImage">Image</label>
        <%= f.file_field :profile_image, class: "form-control-file", placeholder: "プロフィール画像", accept: "image/*" %>
      </div>
      <div class="form-group">
        <label for="introduction">introduction</label>
        <%= f.text_area :introduction, class: "form-control", id:"introduction"%>
      </div>
        <%= f.submit "Update User", class: "btn btn-secondary" %>
      <% end %>