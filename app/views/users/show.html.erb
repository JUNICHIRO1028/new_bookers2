<!--userinfo-->  <!--New book-->
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <%= render 'books/list', user: @user, book: @book %>
        </div>

<!--userのbooksのindex-->
    <div class="col-md-8 offset-md-1">
        <h1>Books</h1>
        <table class="table">
            <tbody>
            <tr>
                <th scope="col"></th>
                <th scope="col">Title</th>
                <th scope="col">opinion</th>
            </tr>

            <% @books.each do |book| %>
            <tr>
                <td><%= image_tag book.user.get_profile_image(100,100) %></td>
                <td><%= link_to "#{book.title}", book_path(book.id) %></td>
                <td><%= book.body %></td>
            </tr>
            <% end %>
            </tbody>
        </table>
    </div>
    </div>
</div>








