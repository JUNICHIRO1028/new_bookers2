<!--部分userinfo/booknew/テンプレ-->
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <%= render 'books/list', user: @user, book: @book %>
        </div>

<!--user全員分の投稿-->
        <div class="col-md-8 offset-md-1">
            <h1>Users</h1>
                <table class="table">
                    <tbody>
                        <tr>
                            <th scope="col">image</th>
                            <th scope="col">name</th>
                            <th scope="col"></th>
                        </tr>

                        <% @users.each do |user| %>
                        <tr>
                            <td><%= image_tag user.get_profile_image(100,100) %></td>
                            <td><%= user.name %></td>
                            <td><%= link_to "show", user_path(current_user) %></td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
        </div>
    </div>
</div>

