<!--userinfo-->
<h1>User info</h1>

  <%= image_tag user.get_profile_image(100,100) %>
  <h3><%= user.name %></h3>
  <h3><%= user.introduction %></h3>
  <% if user == current_user %>
    <a class="btn btn-outline-secondary btn-block"><%= link_to edit_user_path(@user) do %>
      <i class="fa-solid fa-user-gear"></i></a>
    <% end%>
  <% end %>

  <!-- bookのnew -->
<h1>New book</h1>

<%= form_with model: book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_field :body %>
  <%= f.submit '投稿'%>
<% end %>
