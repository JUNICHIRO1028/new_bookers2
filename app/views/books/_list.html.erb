

<!--books/index-->
<h1>Books</h1>
<% books.each do |book| %>
    <p>投稿ユーザー画像:<%= image_tag book.user.get_profile_image(100,100) %></p>
    <p>Title:<%= book.title %></p>
    <p>Body:<%= book.body %></p>
    <p>ユーザーネーム:<%= book.user.name %>
    <%= link_to "show", book_path(book.id) %>
<% end %>

<!-- bookのnew -->
<h1>New book</h1>



<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_field :body %>
  <%= f.submit '投稿'%>
<% end %>



