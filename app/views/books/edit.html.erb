<!--book edit-->
<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto px-0 my-5">
          <h1>Editing Book</h1>
          <%= form_with model: @book do |f| %>
          <div class="form-group">
            <p>Title</p>
            <%= f.text_field :title, class: "form-control" %>
            <p>Opinion</p>
            <%= f.text_field :body, class: "form-control"%>
            <%= f.submit 'Update Book', class: "btn btn-success"%>
            <br><%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
          </div>
          <% end %>
        </div>
    </div>
</div>