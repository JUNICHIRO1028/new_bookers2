<!--book edit-->
<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto px-0 my-5">
          <h1>Editing Book</h1>

          <% if @book.errors.any? %>
            <h4><%= @book.errors.count %>errors prohibited this obj from being saved:</h4>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>

          <%= form_with model: @book do |f| %>
          <div class="form-group">
            <p>Title</p>
            <%= f.text_field :title, class: "form-control" %>
            <p>Opinion</p>
            <%= f.text_area :body, class: "form-control"%>
            <%= f.submit 'Update Book', class: "btn btn-success"%>
            <br><%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
          </div>
          <% end %>
        </div>
    </div>
</div>