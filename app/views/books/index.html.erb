<!--books/index-->
<h1>Books</h1>

<table>
<thead>
    <th>投稿ユーザー画像</th>
    <th>Title</th>
    <th>Opinion</th>
</thead>

<tbody>
    <% @books.each do |book| %>
    <tr>
    <td><span><%= image_tag book.user.get_profile_image(100,100) %></span></td>
    <td><span><%= book.title %></span></td>
    <td><span><%= book.body %></span></td>
    <td><span><%= link_to "show", book_path(book.id) %></span></td>
    </tr>
        <% end %>
</tbody>
</table>