<!--部分userinfo/booknew/テンプレ-->
<div class="container">

<% if @book.errors.any? %>
  <h4><%= @book.errors.count %>errors prohibited this obj from being saved:</h4>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

    <div class="row">
      <div class="col-md-3">
       <%= render 'list', user: @user, book: @book %>
      </div>

<!--userの投稿一覧-->
      <div class="col-md-8 offset-md-1">
        <h1>Books</h1>
          <table class="table">
          <tbody>
            <tr>
              <th scope="col"></th>
              <th scope="col">Title</th>
              <th scope="col">Opinion</th>
            </tr>

              <% @books.each do |book| %>
            <tr>
              <td><%= image_tag current_user.get_profile_image(100,100) %></td>
              <td><%= link_to "#{book.title}", book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
              <% end %>
          </tbody>
          </table>
      </div>
    </div>
</div>



